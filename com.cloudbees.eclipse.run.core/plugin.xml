<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension-point id="com.cloudbees.eclipse.run.core.processLifecycleHook"
		name="launchHook" schema="schema/com.cloudbees.eclipse.run.core.processLifecycleHook.exsd" />
	<extension point="org.eclipse.wst.server.core.runtimeTypes">
		<runtimeType
			description="Deploy to RUN@cloud" id="com.cloudbees.eclipse.core.runcloud"
			name="RUN@cloud" vendor="CloudBees" vendorId="com.cloudbees" version="1">
			<moduleType types="com.cloudbees.eclipse.core.runcloud"
				versions="*">
			</moduleType>
		</runtimeType>
		<runtimeType
			description="Launch local instance of application" id="com.cloudbees.eclipse.core.runcloud.local"
			name="Run@local" vendor="CloudBees" vendorId="com.cloudbees" version="1">
			<moduleType types="com.cloudbees.eclipse.core.runcloud.local"
				versions="*">
			</moduleType>
		</runtimeType>
	</extension>
	<extension point="org.eclipse.wst.server.core.serverTypes">
		<serverType
        behaviourClass="com.cloudbees.eclipse.run.core.wst.RunCloudBehaviourDelegate"
        class="com.cloudbees.eclipse.run.core.wst.RunCloudServerDelegate"
        description="RUN@cloud cloud instance"
        hasConfiguration="false"
        id="com.cloudbees.eclipse.core.runcloud"
        launchConfigId="com.cloudbees.eclipse.run.core.launchcloudconfiguration.launchConfigurationType"
        launchModes="run, stop, publish"
        name="RUN@cloud"
        runtime="false"
        runtimeTypeId="com.cloudbees.eclipse.core.runcloud"
        supportsRemoteHosts="true">
		</serverType>
		<serverType
			behaviourClass="com.cloudbees.eclipse.run.core.wst.RunCloudLocalBehaviourDelegate"
			class="com.cloudbees.eclipse.run.core.wst.RunCloudServerDelegate"
			description="RUN@cloud Local instance" hasConfiguration="true"
			id="com.cloudbees.eclipse.core.runcloud.local" initialState="stopped"
			launchConfigId="com.cloudbees.eclipse.run.core.launchconfiguration.launchConfigurationTypecom.cloudbees.eclipse.run.core.launchcloudconfiguration.launchConfigurationType"
			launchModes="run,stop" name="RUN@cloud Local instance" runtime="false"
			runtimeTypeId="com.cloudbees.eclipse.core.runcloud.local"
			supportsRemoteHosts="true">
		</serverType>
	</extension>
	<extension point="org.eclipse.wst.server.core.moduleTypes">
		<moduleType id="com.cloudbees.eclipse.core.runcloud" name="RUN@cloud">
		</moduleType>
		<moduleType id="com.cloudbees.eclipse.core.runcloud.local"
			name="RUN@cloud local">
		</moduleType>
	</extension>
	<extension point="com.cloudbees.eclipse.run.core.processLifecycleHook">
		<hook defaultHandler="com.cloudbees.eclipse.run.core.wst.WSTProjectLifecycleHook"
			id="com.cloudbees.eclipse.run.core.wstHook">
		</hook>
	</extension>
</plugin>
