<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.ui.commands">
		<category id="com.cloudbees.eclipse.run.ui.commands.category"
			name="CloudBees Run@Cloud">
		</category>
	</extension>
	<extension point="org.eclipse.ui.popupMenus">
		<objectContribution id="com.cloudbees.eclipse.run.ui.contribution"
			objectClass="org.eclipse.core.resources.IProject">
			<menu id="com.cloudbees.eclipse.run.ui.menu1" label="CloudBees Run@Cloud"
				path="additions">
				<separator name="group1">
				</separator>
			</menu>
			<action class="com.cloudbees.eclipse.run.ui.popup.actions.DeployAction"
				enablesFor="1" id="com.cloudbees.eclipse.run.ui.newAction" label="Deploy"
				menubarPath="com.cloudbees.eclipse.run.ui.menu1/group1">
			</action>
		</objectContribution>
	</extension>


	<extension point="org.eclipse.ui.newWizards">
		<category id="com.cloudbees.eclipse.run.ui" name="CloudBees">
		</category>
		<wizard category="com.cloudbees.eclipse.run.ui"
			class="com.cloudbees.eclipse.run.ui.wizards.CBSampleWebAppWizard"
			icon="icons/16x16/cb_plain.png" id="com.cloudbees.eclipse.run.ui.wizards.CBSampleWebAppWizard"
			name="Sample Web App" project="true">
		</wizard>
	</extension>

</plugin>
